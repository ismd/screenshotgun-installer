<?xml version="1.0" encoding="UTF-8"?>
<Installer>
    <Name>Screenshotgun</Name>
    <Version>{VERSION}</Version>
    <Publisher>Vladimir Kosteley</Publisher>
    <ProductUrl>https://screenshotgun.com</ProductUrl>
    <InstallerWindowIcon>screenshotgun</InstallerWindowIcon>
    <InstallerApplicationIcon>screenshotgun</InstallerApplicationIcon>
    <Title>Screenshotgun Installer</Title>
    <Logo>screenshotgun.png</Logo>
    <RunProgram>@TargetDir@/screenshotgun.app/Contents/MacOS/screenshotgun</RunProgram>
    <ControlScript>controlscript.qs</ControlScript>

    <TargetDir>@ApplicationsDir@/Screenshotgun</TargetDir>
    <AdminTargetDir>@ApplicationsDir@/Screenshotgun</AdminTargetDir>
    <RemoteRepositories>
        <Repository>
            <Url>https://installer.screenshotgun.com/osx</Url>
            <Enabled>1</Enabled>
            <DisplayName>Official repository</DisplayName>
        </Repository>
    </RemoteRepositories>
</Installer>
